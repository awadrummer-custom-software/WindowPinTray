<Window x:Class="WindowPinTray.UI.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Color"
        Width="340"
        Height="320"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#1e1e1e">
    <Window.Resources>
        <SolidColorBrush x:Key="TextBrush" Color="#e0e0e0"/>
        <SolidColorBrush x:Key="InputBgBrush" Color="#252525"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#404040"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#0078d4"/>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource InputBgBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="CaretBrush" Value="{StaticResource TextBrush}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Slider">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2d2d2d"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3a3a3a"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Color Preview -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
            <Border x:Name="ColorPreview" Width="60" Height="60" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4"/>
            <StackPanel Margin="16,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="HEX" FontSize="10" Foreground="#909090"/>
                <TextBox x:Name="HexTextBox" Width="100" TextChanged="HexTextBox_TextChanged"/>
            </StackPanel>
        </StackPanel>

        <!-- Sliders -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <!-- RGB -->
            <TextBlock Grid.Row="0" Text="R" VerticalAlignment="Center"/>
            <Slider x:Name="RSlider" Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="RgbSlider_ValueChanged"/>
            <TextBox x:Name="RTextBox" Grid.Row="0" Grid.Column="2" Width="45" TextChanged="RgbTextBox_TextChanged" Tag="R"/>

            <TextBlock Grid.Row="1" Text="G" VerticalAlignment="Center" Margin="0,4,0,0"/>
            <Slider x:Name="GSlider" Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="255" Margin="0,4,0,0" ValueChanged="RgbSlider_ValueChanged"/>
            <TextBox x:Name="GTextBox" Grid.Row="1" Grid.Column="2" Width="45" Margin="0,4,0,0" TextChanged="RgbTextBox_TextChanged" Tag="G"/>

            <TextBlock Grid.Row="2" Text="B" VerticalAlignment="Center" Margin="0,4,0,0"/>
            <Slider x:Name="BSlider" Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="255" Margin="0,4,0,0" ValueChanged="RgbSlider_ValueChanged"/>
            <TextBox x:Name="BTextBox" Grid.Row="2" Grid.Column="2" Width="45" Margin="0,4,0,0" TextChanged="RgbTextBox_TextChanged" Tag="B"/>

            <!-- HSB -->
            <TextBlock Grid.Row="4" Text="H" VerticalAlignment="Center"/>
            <Slider x:Name="HSlider" Grid.Row="4" Grid.Column="1" Minimum="0" Maximum="360" ValueChanged="HsbSlider_ValueChanged"/>
            <TextBox x:Name="HTextBox" Grid.Row="4" Grid.Column="2" Width="45" TextChanged="HsbTextBox_TextChanged" Tag="H"/>

            <TextBlock Grid.Row="5" Text="S" VerticalAlignment="Center" Margin="0,4,0,0"/>
            <Slider x:Name="SSlider" Grid.Row="5" Grid.Column="1" Minimum="0" Maximum="100" Margin="0,4,0,0" ValueChanged="HsbSlider_ValueChanged"/>
            <TextBox x:Name="STextBox" Grid.Row="5" Grid.Column="2" Width="45" Margin="0,4,0,0" TextChanged="HsbTextBox_TextChanged" Tag="S"/>

            <TextBlock Grid.Row="6" Text="B" VerticalAlignment="Center" Margin="0,4,0,0"/>
            <Slider x:Name="BrSlider" Grid.Row="6" Grid.Column="1" Minimum="0" Maximum="100" Margin="0,4,0,0" ValueChanged="HsbSlider_ValueChanged"/>
            <TextBox x:Name="BrTextBox" Grid.Row="6" Grid.Column="2" Width="45" Margin="0,4,0,0" TextChanged="HsbTextBox_TextChanged" Tag="Br"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Cancel" Width="70" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button Content="OK" Width="70" Style="{StaticResource PrimaryButton}" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>

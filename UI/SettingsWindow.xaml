<Window x:Class="WindowPinTray.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window Pin Settings"
        ResizeMode="CanResizeWithGrip"
        Width="420"
        Height="520"
        MinWidth="400"
        MinHeight="480"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e">
    <Window.Resources>
        <SolidColorBrush x:Key="TextBrush" Color="#e0e0e0"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#909090"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#2d2d2d"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#404040"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#0078d4"/>
        <SolidColorBrush x:Key="InputBgBrush" Color="#252525"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource InputBgBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="CaretBrush" Value="{StaticResource TextBrush}"/>
        </Style>
        <Style TargetType="Slider">
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3a3a3a"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1a86d9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="16,12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <!-- Startup -->
            <CheckBox x:Name="StartWithWindowsCheckBox" Content="Start with Windows" Margin="0,0,0,12"/>

            <!-- Size Section -->
            <TextBlock Text="SIZE" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Width" VerticalAlignment="Center"/>
                <Slider x:Name="WidthSlider" Grid.Column="1" Minimum="1" Maximum="256" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="HandleSliderChanged"/>
                <TextBox x:Name="ButtonWidthTextBox" Grid.Column="2" Width="36" Margin="6,0,0,0" TextChanged="HandleSizeTextChanged" Tag="Width"/>
            </Grid>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Height" VerticalAlignment="Center"/>
                <Slider x:Name="HeightSlider" Grid.Column="1" Minimum="1" Maximum="256" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="HandleSliderChanged"/>
                <TextBox x:Name="ButtonHeightTextBox" Grid.Column="2" Width="36" Margin="6,0,0,0" TextChanged="HandleSizeTextChanged" Tag="Height"/>
            </Grid>

            <!-- Position Section -->
            <TextBlock Text="POSITION" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
            <CheckBox x:Name="CenterButtonCheckBox" Content="Center horizontally" Margin="0,0,0,6" Checked="HandleCenterToggleChanged" Unchecked="HandleCenterToggleChanged"/>
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="X Offset" VerticalAlignment="Center"/>
                <Slider x:Name="OffsetXSlider" Grid.Column="1" Minimum="0" Maximum="400" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="HandleSliderChanged"/>
                <TextBox x:Name="OffsetXTextBox" Grid.Column="2" Width="36" Margin="6,0,0,0" TextChanged="HandleSizeTextChanged" Tag="OffsetX"/>
            </Grid>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Y Offset" VerticalAlignment="Center"/>
                <Slider x:Name="OffsetYSlider" Grid.Column="1" Minimum="-200" Maximum="400" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="HandleSliderChanged"/>
                <TextBox x:Name="OffsetYTextBox" Grid.Column="2" Width="36" Margin="6,0,0,0" TextChanged="HandleSizeTextChanged" Tag="OffsetY"/>
            </Grid>

            <!-- Appearance Section -->
            <TextBlock Text="APPEARANCE" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Pin color" VerticalAlignment="Center"/>
                <TextBox x:Name="HighlightColorTextBox" Grid.Column="1" Margin="0,0,6,0" ToolTip="Hex color (e.g. #FF5500)"/>
                <Border x:Name="ColorPreview" Grid.Column="2" Width="24" Height="24" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="2"/>
            </Grid>
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Default img" VerticalAlignment="Center"/>
                <TextBox x:Name="ButtonImageTextBox" Grid.Column="1" IsReadOnly="True" Margin="0,0,6,0"/>
                <Button Content="..." Width="28" Tag="Default" Click="HandleBrowseClick"/>
            </Grid>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Hover img" VerticalAlignment="Center"/>
                <TextBox x:Name="HoverImageTextBox" Grid.Column="1" IsReadOnly="True" Margin="0,0,6,0"/>
                <Button Content="..." Width="28" Tag="Hover" Click="HandleBrowseClick"/>
            </Grid>

            <!-- Ignore Lists -->
            <TextBlock Text="IGNORE LISTS" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
            <TextBlock Text="Window titles (one per line)" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,2"/>
            <TextBox x:Name="IgnoredTitlesTextBox" AcceptsReturn="True" Height="50" VerticalScrollBarVisibility="Auto" Margin="0,0,0,6"/>
            <TextBlock Text="Executables (one per line)" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,2"/>
            <TextBox x:Name="IgnoredExecutablesTextBox" AcceptsReturn="True" Height="50" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Cancel" Width="70" Margin="0,0,6,0" Click="HandleCancelClick"/>
            <Button Content="Apply" Width="70" Margin="0,0,6,0" Click="HandleApplyClick"/>
            <Button x:Name="SaveButton" Content="Save" Width="70" Style="{StaticResource PrimaryButton}" Click="HandleSaveClick"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="WindowPinTray.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window Pin Settings"
        ResizeMode="CanResizeWithGrip"
        Width="700"
        Height="420"
        MinWidth="600"
        MinHeight="300"
        Background="#1e1e1e">
    <Window.Resources>
        <SolidColorBrush x:Key="TextBrush" Color="#e0e0e0"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#909090"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#2d2d2d"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#404040"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#0078d4"/>
        <SolidColorBrush x:Key="InputBgBrush" Color="#252525"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource InputBgBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="CaretBrush" Value="{StaticResource TextBrush}"/>
        </Style>
        <Style TargetType="Slider">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3a3a3a"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content: Two Columns -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column: Settings (Scrollable) -->
            <ScrollViewer Grid.Column="0" Margin="0,0,16,0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Size Section -->
                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="SIZE" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="45"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Width" VerticalAlignment="Center"/>
                        <Slider x:Name="WidthSlider" Grid.Column="1" Minimum="1" Maximum="256" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="OnSliderChanged"/>
                        <TextBox x:Name="ButtonWidthTextBox" Grid.Column="2" Width="40" Margin="6,0,0,0" TextChanged="OnSizeTextChanged" Tag="Width"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="45"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Height" VerticalAlignment="Center"/>
                        <Slider x:Name="HeightSlider" Grid.Column="1" Minimum="1" Maximum="256" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="OnSliderChanged"/>
                        <TextBox x:Name="ButtonHeightTextBox" Grid.Column="2" Width="40" Margin="6,0,0,0" TextChanged="OnSizeTextChanged" Tag="Height"/>
                    </Grid>
                </StackPanel>

                <!-- Position Section -->
                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="POSITION" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <CheckBox x:Name="CenterButtonCheckBox" Content="Center horizontally" Margin="0,0,0,6" Checked="OnSettingChanged" Unchecked="OnSettingChanged"/>
                    <Grid Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="45"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="X Offset" VerticalAlignment="Center"/>
                        <Slider x:Name="OffsetXSlider" Grid.Column="1" Minimum="0" Maximum="400" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="OnSliderChanged"/>
                        <TextBox x:Name="OffsetXTextBox" Grid.Column="2" Width="40" Margin="6,0,0,0" TextChanged="OnSizeTextChanged" Tag="OffsetX"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="45"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Y Offset" VerticalAlignment="Center"/>
                        <Slider x:Name="OffsetYSlider" Grid.Column="1" Minimum="-200" Maximum="400" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="OnSliderChanged"/>
                        <TextBox x:Name="OffsetYTextBox" Grid.Column="2" Width="40" Margin="6,0,0,0" TextChanged="OnSizeTextChanged" Tag="OffsetY"/>
                    </Grid>
                </StackPanel>

                <!-- Appearance Section -->
                <StackPanel>
                    <TextBlock Text="APPEARANCE" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>

                    <!-- Pinned Color -->
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Pin color" VerticalAlignment="Center"/>
                        <TextBox x:Name="HighlightColorTextBox" Grid.Column="1" IsReadOnly="True"/>
                        <Border x:Name="ColorPreview" Grid.Column="2" Width="28" Height="28" Margin="6,0,0,0"
                                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="3"
                                Cursor="Hand" MouseLeftButtonDown="ColorPreview_Click"/>
                        <Button x:Name="ClearColorButton" Grid.Column="3" Content="X" Width="28" Height="28" Margin="4,0,0,0"
                                ToolTip="Clear color" Click="ClearColor_Click"/>
                    </Grid>

                    <!-- Default Image -->
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Default img" VerticalAlignment="Center"/>
                        <TextBox x:Name="ButtonImageTextBox" Grid.Column="1" IsReadOnly="True"/>
                        <Button Grid.Column="2" Content="..." Width="28" Margin="6,0,0,0" Tag="Default" Click="HandleBrowseClick"/>
                        <Button Grid.Column="3" Content="X" Width="28" Margin="4,0,0,0" Tag="ClearDefault" Click="ClearImage_Click"/>
                    </Grid>

                    <!-- Hover Image -->
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Hover img" VerticalAlignment="Center"/>
                        <TextBox x:Name="HoverImageTextBox" Grid.Column="1" IsReadOnly="True"/>
                        <Button Grid.Column="2" Content="..." Width="28" Margin="6,0,0,0" Tag="Hover" Click="HandleBrowseClick"/>
                        <Button Grid.Column="3" Content="X" Width="28" Margin="4,0,0,0" Tag="ClearHover" Click="ClearImage_Click"/>
                    </Grid>

                    <!-- Pinned Image -->
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Pinned img" VerticalAlignment="Center"/>
                        <TextBox x:Name="PinnedImageTextBox" Grid.Column="1" IsReadOnly="True"/>
                        <Button Grid.Column="2" Content="..." Width="28" Margin="6,0,0,0" Tag="Pinned" Click="HandleBrowseClick"/>
                        <Button Grid.Column="3" Content="X" Width="28" Margin="4,0,0,0" Tag="ClearPinned" Click="ClearImage_Click"/>
                    </Grid>

                    <!-- Pinned Hover Image -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Pin hover img" VerticalAlignment="Center"/>
                        <TextBox x:Name="PinnedHoverImageTextBox" Grid.Column="1" IsReadOnly="True"/>
                        <Button Grid.Column="2" Content="..." Width="28" Margin="6,0,0,0" Tag="PinnedHover" Click="HandleBrowseClick"/>
                        <Button Grid.Column="3" Content="X" Width="28" Margin="4,0,0,0" Tag="ClearPinnedHover" Click="ClearImage_Click"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
            </ScrollViewer>

            <!-- Right Column: Ignore Lists -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="IGNORE LISTS" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>

                <!-- Window Titles -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Window titles (one per line)" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,2"/>
                    <TextBox x:Name="IgnoredTitlesTextBox" Grid.Row="1" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextChanged="OnIgnoreListChanged"/>
                </Grid>

                <!-- Executables -->
                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Executables - paths (one per line)" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,2"/>
                    <TextBox x:Name="IgnoredExecutablesTextBox" Grid.Row="1" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextChanged="OnIgnoreListChanged"/>
                </Grid>
            </Grid>
        </Grid>

        <!-- Bottom Row -->
        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <CheckBox x:Name="StartWithWindowsCheckBox" Grid.Column="0" Content="Start with Windows" VerticalAlignment="Center" Checked="OnSettingChanged" Unchecked="OnSettingChanged"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Export" Width="70" Margin="0,0,8,0" Click="HandleExportClick"/>
                <Button Content="Import" Width="70" Click="HandleImportClick"/>
            </StackPanel>
            <Button Grid.Column="2" Content="Close" Width="80" Style="{StaticResource PrimaryButton}" Click="HandleCloseClick"/>
        </Grid>
    </Grid>
</Window>
